@model BlogDataModel
@{
    ViewData["Title"] = "Search Blog";
}


<div class="list-search-blog">
    <div class="card px-1">
        <div class="card-header py-0">
            <h4>Search Blog</h4>
        </div>
        <div class="card-body px-1">
            <div class="search-blog py-3">
                @using (Html.BeginForm("Search", "Blog", FormMethod.Get, new { @class = "needs-validation", enctype = "application/x-www-form-urlencoded" }))
                {
                    <div class="row  align-items-center">
                        <div class="col-md-2">
                            <label for="Title" class="col-form-label">Tiêu đề</label>
                        </div>
                        <div class="col-md-10">
                            @Html.TextBox("Title", Model.Title_Search, new { @class = "form-control", placeholder = "Tiêu đề" })
                        </div>
                        <div class="col-12 py-3">
                            <button class="btn btn-success" type="submit"> Search</button>
                        </div>
                    </div>
                }
            </div>
            <div class="table table-list-blog">
                <h4>List Blogs</h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="row-id" scope="col">ID</th>
                            <th class="col-md-4" scope="col">Tin</th>
                            <th class="col-md-1" scope="col">Loại</th>
                            <th class="col-md-1" scope="col">Trạng thái</th>
                            <th class="col-md-1" scope="col">Vị trí</th>
                            <th class="col-md-2" scope="col">Ngày public</th>
                            <th class="col-md-1" scope="col">Edit</th>
                            <th class="" scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (BlogModel blog in Model.listBlogs)
                        {
                            <tr>
                                <th scope="row">@Html.DisplayFor(Id => blog.Id)</th>
                                <td> @Html.DisplayFor(title => blog.Title)</td>
                                <td>
                                    Thời sự
                                </td>
                                @{
                                    if (blog.Is_active)
                                    {
                                        <td>Yes</td>
                                    }
                                    else
                                    {
                                        <td>No</td>
                                    }
                                }
                                <td>
                                    @Html.DisplayFor(place => blog.Place)
                                </td>
                                <td>
                                    @Html.DisplayFor(place => blog.Public_Date_Str)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", "Blog", new { id = blog.Id }, new { @class = "link-primary tex-center" })
                                </td>
                                <td>
                                    <button class="btn btn-outline-danger" onclick='deleteBlog(@blog.Id)'>Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
