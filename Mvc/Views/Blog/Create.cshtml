@{
    ViewData["Title"] = "New Blog";
}

<div class="create-blog">
    <div class="card px-1">
        <div class="card-header py-0">
            <h4>New Blogs</h4>
        </div>
        <div class="card-body p-2 with-50">
            <form>
                <div class="row align-items-center">
                    <div class="col-12 m-1">
                        <label for="inputNewTitleBlog" class="col-form-label">Tiêu đề</label>
                        <input type="text" id="inputNewTitleBlog" class="form-control ">
                    </div>

                    <div class="col-12 m-1">
                        <label for="inputNewShortDescTitleBlog" class="col-form-label">Mô tả ngắn</label>
                        <input type="text" id="inputNewShortDescTitleBlog" class="form-control">
                    </div>

                    <div class="col-12 m-1">
                        <label for="inputNewDescTitleBlog" class="col-form-label">Chi tiết</label>
                        <textarea class="form-control" rows="7" id="inputNewDescTitleBlog"></textarea>
                    </div>

                    <div class="col-md-12 m-1 input-img-create-blog">
                        <label for="inputNewFile" class="col-form-label">Hình ảnh</label>
                        <input class="form-control " id="inputNewFile" type="file">
                    </div>

                    <div class="col-md-12 m-1">
                        <label for="inputNewCategory" class="col-form-label">Loại</label>
                        <select id="inputNewCategory" class="form-control with-25">
                            <option selected>Thời sự</option>
                            <option>Thế giới</option>
                            <option>Kinh doanh</option>
                            <option>Giải trí</option>
                            <option>Thể thao</option>
                            <option>Pháp luật</option>
                        </select>
                    </div>

                    <div class="col-md-12 m-1">
                        <div class="col-md-12">
                            <label class="col-form-label">Vị trí</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="placeNewVietName" checked>
                            <label class="form-check-label" for="placeNewVietName">
                                Việt Nam
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="placeNewAsian">
                            <label class="form-check-label" for="placeNewAsian">
                                Châu Á
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="placeNewEuro">
                            <label class="form-check-label" for="placeNewEuro">
                                Châu Âu
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="placeNewAmerica">
                            <label class="form-check-label" for="placeNewAmerica">
                                Châu Mỹ
                            </label>
                        </div>
                    </div>
                    <div class="col-md-12 m-1">
                        <div>
                            <label class="col-form-label"> Public</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="radioNewPublic" id="radioNewPublicNo">
                            <label class="form-check-label" for="radioNewPublicNo">
                                Yes
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="radioNewPublic" id="radioNewPublicYes" checked>
                            <label class="form-check-label" for="radioNewPublicYes">
                                No
                            </label>
                        </div>
                    </div>
                    <div class="col-12 m-1">
                        <label for="inputEditPublicDate" class="col-form-label">Date public</label>
                        <input type="date" id="inputEditPublicDate" class="form-control with-30" placeholder="mm/dd/yyyy">
                    </div>


                </div>
            </form>
            <div class="col-12 pt-3 text-center">
                <button class="btn btn-success">Submit</button>
                <button class="btn btn-primary" onclick="newClear()"> Clear</button>
            </div>
        </div>
    </div>
</div>