@model BlogDataModel

@{
    ViewData["Title"] = "New Blog";
    var checkInsert = ViewBag.CheckInsert;
    var messageInser = ViewData["MessageInsert"];
    var listCategory = ViewBag.listCategory;

}

<div class="create-blog">
    <div class="card px-1">
        <div class="card-header py-0">
            <h4>New Blogs</h4>
        </div>
        <div class="card-body p-2 with-50">
            @using (Html.BeginForm("createBlog", "Blog", FormMethod.Post, new { @class = "needs-validation", novalidate = "" }))
            {
                <div class="row align-items-center ">

                    <div class="col-12 mt-3 has-validation">
                        @Html.LabelFor(title => Model.Blog.Title, new { @class = "col-form-label" })
                        @Html.TextBoxFor(title => Model.Blog.Title, new { @class = "form-control ", required = "", placeholder = "Title" })
                        <div class="invalid-feedback">
                            Title not null
                        </div>
                    </div>

                    <div class="col-12 mt-3 has-validation">
                        @Html.LabelFor(sd => Model.Blog.Short_Description, new { @class = "col-form-label" })
                        @Html.TextBoxFor(sd => Model.Blog.Short_Description, new { @class = "form-control ", required = "", placeholder = "Short Description" })
                        <div class="invalid-feedback">
                            Short Description not null
                        </div>
                    </div>

                    <div class="col-12 mt-3">
                        @Html.LabelFor(d => Model.Blog.Description, new { @class = "col-form-label" })
                        @Html.TextAreaFor(d => Model.Blog.Description, new { @class = "form-control", required = "", rows = "6" })
                        <div class="invalid-feedback">
                            Description not null
                        </div>
                    </div>

                    <div class="col-md-12 mt-3 input-img-create-blog">
                        <label for="inputNewFile" class="col-form-label">Hình ảnh</label>
                        <input class="form-control-novalidate with-75" id="inputNewFile" name="ImageUrl" type="file">
                    </div>

                    <div class="col-md-12 mt-3">
                        <label for="Category" class="col-form-label">Loại</label>
                        @Html.DropDownList("Category", new SelectList(Model.listCategory, "Id", "Name"), "Please select...", new { @class = "form-control-novalidate with-30" })

                    </div>

                    <div class="col-md-12 mt-3">
                        <div class="col-md-12">
                            <label class="col-form-label">Vị trí</label>
                        </div>
                        @{
                            foreach (var place in Model.listPlace)
                            {
                                <div class="form-check">
                                    @Html.CheckBox("Place" + place.Name, place.Id == 1 ? true : false, new { @class = "form-check-input" })

                                    @Html.Label("Place" + place.Name, place.Name,new {@class= "form-check-label" })
                                </div>
                            }
                        }                        
                    </div>
                    <div class="col-md-12 mt-3">
                        <div>
                            <label class="col-form-label"> Public</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Status" value="true" id="radioNewPublicNo">
                            <label class="form-check-label" for="radioNewPublicNo">
                                Yes
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Status" value="false" id="radioNewPublicYes" checked>
                            <label class="form-check-label" for="radioNewPublicYes">
                                No
                            </label>
                        </div>
                    </div>
                    <div class="col-12 mt-3">
                        <label for="inputEditPublicDate" class="col-form-label">Date public</label>
                        <input type="date" id="inputEditPublicDate" name="Public_Date" class="form-control-novalidate with-30" placeholder="mm/dd/yyyy">
                    </div>


                    <div class="col-12 pt-3 mt-3 text-center">
                        <button class="btn btn-success" type="submit">Submit</button>
                        <button class="btn btn-primary" type="button" onclick="blogClear()"> Clear</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>