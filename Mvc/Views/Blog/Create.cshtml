@{
    ViewData["Title"] = "New Blog";

}

<div class="create-blog">
    <div class="card px-1">
        <div class="card-header py-0">
            <h4>New Blogs</h4>
            @{
            if (ViewBag.CheckInsert)
            {
                <p>@ViewData["MessageInsert"]</p>
            }
            }
        </div>
        <div class="card-body p-2 with-50">
            <form method="post" action="/blog/Create" enctype="application/x-www-form-urlencoded">
                <div class="row align-items-center">
                    <div class="col-12 m-1">
                        <label for="inputNewTitleBlog" class="col-form-label">Tiêu đề</label>
                        <input type="text" id="inputNewTitleBlog" name="Title" class="form-control ">
                    </div>

                    <div class="col-12 m-1">
                        <label for="inputNewShortDescTitleBlog" class="col-form-label">Mô tả ngắn</label>
                        <input type="text" id="inputNewShortDescTitleBlog" name="Short_Description" class="form-control">
                    </div>

                    <div class="col-12 m-1">
                        <label for="inputNewDescTitleBlog" class="col-form-label">Chi tiết</label>
                        <textarea class="form-control" rows="7" id="inputNewDescTitleBlog" name="Description"></textarea>
                    </div>

                    <div class="col-md-12 m-1 input-img-create-blog">
                        <label for="inputNewFile" class="col-form-label">Hình ảnh</label>
                        <input class="form-control " id="inputNewFile" name="ImageUrl" type="file">
                    </div>

                    <div class="col-md-12 m-1">
                        <label for="inputNewCategory" class="col-form-label">Loại</label>
                        <select id="inputNewCategory" class="form-control with-25" name="Category_Id">
                            @{
                                foreach (CategoryModel category in ViewBag.listCategory)
                                {
                                    if (category.Id == 1)
                                    {
                                        <option selected value="@category.Id">@category.Name</option>

                                    }
                                    else
                                    {
                                        <option value="@category.Id" >@category.Name</option>

                                    }

                                }
                            }
                            
                        </select>
                    </div>

                    <div class="col-md-12 m-1"  >
                        <div class="col-md-12">
                            <label class="col-form-label">Vị trí</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Việt Nam" name="Place" id="placeNewVietName" checked>
                            <label class="form-check-label" for="placeNewVietName">
                                Việt Nam
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" name="Place" id="placeNewAsian">
                            <label class="form-check-label" for="placeNewAsian">
                                Châu Á
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" name="Place" id="placeNewEuro">
                            <label class="form-check-label" for="placeNewEuro">
                                Châu Âu
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" name="Place" id="placeNewAmerica">
                            <label class="form-check-label" for="placeNewAmerica">
                                Châu Mỹ
                            </label>
                        </div>
                    </div>
                    <div class="col-md-12 m-1">
                        <div>
                            <label class="col-form-label"> Public</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Status" value="true" id="radioNewPublicNo">
                            <label class="form-check-label" for="radioNewPublicNo">
                                Yes
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Status"  value="false" id="radioNewPublicYes" checked>
                            <label class="form-check-label" for="radioNewPublicYes">
                                No
                            </label>
                        </div>
                    </div>
                    <div class="col-12 m-1">
                        <label for="inputEditPublicDate" class="col-form-label">Date public</label>
                        <input type="date" id="inputEditPublicDate" name="Public_Date" class="form-control with-30" placeholder="mm/dd/yyyy">
                    </div>


                </div>
                <div class="col-12 pt-3 text-center">
                    <button class="btn btn-success" type="submit">Submit</button>
                    <button class="btn btn-primary" type="button" onclick="newClear()"> Clear</button>
                </div>
            </form>

        </div>
    </div>
</div>